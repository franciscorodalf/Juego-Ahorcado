<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="es.franciscorodalf.juegoahorcado.frontend.controller.loginController"
            prefWidth="300" prefHeight="400" style="-fx-background-color: white;">

    <VBox alignment="CENTER" spacing="15" layoutX="25" layoutY="30" prefWidth="250">

        <!-- Campo de Usuario -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Usuario:"/>
            <TextField fx:id="usernameField" promptText="Nombre de usuario"/>
        </HBox>

        <!-- Campo de Contrase単a -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Contrase単a:"/>
            <PasswordField fx:id="passwordField" promptText="Contrase単a"/>
        </HBox>

        <!-- Botones principales -->
        <Button text="Aceptar" fx:id="btnAceptar" onAction="#handleAceptar" maxWidth="200"/>
        <Button text="Registrar" fx:id="btnRegistrar" onAction="#handleRegistrar" maxWidth="200"/>
        <Button text="Listar Usuarios" fx:id="btnListarUsuarios" onAction="#handleListarUsuarios" maxWidth="200"/>
        <Button text="Recuperar Contrase単a" fx:id="btnRecuperar" onAction="#handleRecuperar" maxWidth="200"/>

    </VBox>
</AnchorPane>
