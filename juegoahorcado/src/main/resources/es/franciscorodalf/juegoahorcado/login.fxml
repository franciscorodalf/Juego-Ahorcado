<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="300" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="es.franciscorodalf.juegoahorcado.frontend.controller.loginController">

    <VBox alignment="CENTER" layoutX="25" layoutY="30" prefWidth="250" spacing="15">

        <!-- Campo de Usuario -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Usuario:" />
            <TextField fx:id="usernameField" promptText="Nombre de usuario" />
        </HBox>

        <!-- Campo de Contrase単a -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Contrase単a:" />
            <PasswordField fx:id="passwordField" promptText="Contrase単a" />
        </HBox>

        <!-- Botones principales -->
        <Button fx:id="btnAceptar" maxWidth="200" onAction="#handleAceptar" text="Aceptar" />
        <Button fx:id="btnRegistrar" maxWidth="200" onAction="#handleRegistrar" text="Registrar" />
        <Button fx:id="btnListarUsuarios" maxWidth="200" onAction="#handleListarUsuarios" text="Listar Usuarios" />
        <Button fx:id="btnRecuperar" maxWidth="200" onAction="#handleRecuperar" text="Recuperar Contrase単a" />

    </VBox>
   <stylesheets>
      <URL value="@../../../css/style.css" />
      <URL value="@../../../css/loginStyle.css" />
   </stylesheets>
</AnchorPane>
