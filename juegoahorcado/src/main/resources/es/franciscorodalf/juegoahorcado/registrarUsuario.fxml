<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="es.franciscorodalf.juegoahorcado.frontend.controller.registroController"
            prefWidth="300" prefHeight="550" style="-fx-background-color: white;">
    
    <VBox alignment="CENTER" spacing="15" layoutX="25" layoutY="20" prefWidth="250">

        <Label text="Registro de Usuario" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="usernameField" promptText="Usuario" maxWidth="200"/>
        <TextField fx:id="emailField" promptText="Correo electrónico" maxWidth="200"/>
        <TextField fx:id="confirmEmailField" promptText="Confirmar correo" maxWidth="200"/>
        <PasswordField fx:id="passwordField" promptText="Contraseña" maxWidth="200"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirmar contraseña" maxWidth="200"/>

        <Button text="Registrar" fx:id="btnRegistrar" onAction="#handleRegistrar" maxWidth="200"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button text="Cancelar" fx:id="btnCancelar" onAction="#handleCancelar" maxWidth="200"
                style="-fx-background-color: #888; -fx-text-fill: white;" />
    </VBox>
</AnchorPane>
